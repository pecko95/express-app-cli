{
    "name": "express-app-cli",
    "version": "1.0.3",
    "description": "CLI app for generating an express project folder structure",
    "main": "build/app.js",
    "bin": {
        "express-app-cli": "build/app.js",
        "express-app": "build/app.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "start": "tsc build && node src/app.js",
        "start-ts": "ts-node src/app.ts",
        "test": "jest --watchAll --verbose",
        "watch": "nodemon src/app.ts",
        "lint": "tslint -p tsconfig.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "build": "tsc",
        "prepare": "npm run lint && npm run format && npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git a dd -A src",
        "postversion": "git push && git push --tags"
    },
    "keywords": [
        "CLI",
        "app",
        "nodejs",
        "express",
        "javascript",
        "typescript"
    ],
    "author": "Petar Stevovski",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pstevovski/express-app-cli.git"
    },
    "bugs": {
        "url": "git+https://github.com/pstevovski/express-app-cli/issues"
    },
    "homepage": "https://github.com/pstevovski/express-app-cli#readme",
    "devDependencies": {
        "@types/execa": "^2.0.0",
        "@types/fs-extra": "^9.0.4",
        "@types/inquirer": "^7.3.1",
        "@types/jest": "^26.0.15",
        "@types/listr": "^0.14.2",
        "@types/node": "^14.14.2",
        "jest": "26.4.2",
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "ts-jest": "26.3.0",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@types/ncp": "^2.0.4",
        "arg": "^4.1.3",
        "chalk": "^4.1.0",
        "execa": "^5.0.0",
        "fs-extra": "^9.0.1",
        "inquirer": "^7.3.3",
        "listr": "^0.14.3",
        "ncp": "^2.0.0",
        "pkg-install": "^1.0.0"
    }
}
